        <%= player.name %>: <%= player.character.name %>
        <br />
      <% end %>
  </div>
  <div class="col-sm-8" id="night">
    <h4>New Night Form</h4>
  </div>
  <div class="col-sm-2" id="nightLog">
    <h4>Night Logs</h4>
  </div>
</div>
